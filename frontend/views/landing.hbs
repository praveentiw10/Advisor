<script>



  const MARKET_ASSETS = [
    { name: "AAPL", symbol: "AAPL", currency: "$" },
    { name: "MSFT", symbol: "MSFT", currency: "$" },
    { name: "TSLA", symbol: "TSLA", currency: "$" },
    { name: "AMZN", symbol: "AMZN", currency: "$" },
    { name: "META", symbol: "META", currency: "$" },
    { name: "NVDA", symbol: "NVDA", currency: "$" },
    { name: "GOOGLE", symbol: "GOOGL", currency: "$" },
    { name: "S&P 500", symbol: "SPY", currency: "$" },
    { name: "NASDAQ 100", symbol: "QQQ", currency: "$" },
    { name: "BTC", symbol: "BINANCE:BTCUSDT", currency: "$" },
    { name: "ETH", symbol: "BINANCE:ETHUSDT", currency: "$" }
  ];

  const ticker = document.getElementById("ticker");


  MARKET_ASSETS.forEach(asset => {
    const div = document.createElement("div");
    div.className = "ticker-item";
    div.id = asset.symbol.replace(/[^a-zA-Z0-9]/g, "");
    div.innerHTML = `${asset.name} <span>--</span>`;
    ticker.appendChild(div);
  });

  // Clone items for seamless loop
  const items = ticker.innerHTML;
  ticker.innerHTML += items;


  async function fetchQuote(asset) {
    try {
      const res = await fetch(`/api/stock/${asset.symbol}`);
      const data = await res.json();
      if (!data.c) return;

      const price = data.c.toFixed(2);
      const change = data.dp.toFixed(2);

      const id = asset.symbol.replace(/[^a-zA-Z0-9]/g, "");
      const spans = document.querySelectorAll(`#${id} span`);

      spans.forEach(span => {
        span.textContent = `${asset.currency}${price} (${change}%)`;
        span.className = change >= 0 ? "up" : "down";
      });

    } catch (e) {
      console.error("Error loading:", asset.symbol);
    }
  }


  function loadAll() {
    MARKET_ASSETS.forEach(fetchQuote);
  }

  loadAll();


  setInterval(loadAll, 30000);
</script>



