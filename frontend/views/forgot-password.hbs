<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Modern UI</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: radial-gradient(circle at 70% 30%, #1e1b4b 0%, #020617 100%);
            overflow: hidden;
        }

        .login-card {
            width: 100%;
            max-width: 380px;
            padding: 40px 20px;
            text-align: center;
        }

        h2 {
            color: white;
            font-size: 28px;
            font-weight: 800;
            letter-spacing: 3px;
            margin-bottom: 40px;
            text-transform: uppercase;
        }

        .input-group {
            position: relative;
            display: flex;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.12);
            border-radius: 50px;
            margin-bottom: 25px;
            padding: 6px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .input-group input {
            background: transparent;
            border: none;
            outline: none;
            color: #ffffff;
            padding: 12px 20px;
            width: 100%;
            font-size: 16px;
        }

        .input-group input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .icon-circle {
            background: white;
            min-width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .icon-circle span {
            font-size: 18px;
            filter: grayscale(1);
        }

        .submit-btn {
            width: 100%;
            background-color: white;
            color: #012b32;
            border: none;
            padding: 16px;
            border-radius: 50px;
            font-weight: 900;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
            text-transform: uppercase;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .submit-btn:hover {
            background-color: #f0f0f0;
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

        .signup-link {
            display: block;
            margin-top: 30px;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s;
        }

        .signup-link:hover {
            color: white;
            text-decoration: underline;
        }

        .error-msg {
            color: #f87171;
            font-size: 14px;
            margin-bottom: 12px;
        }

        .success-msg {
            color: #86efac;
            font-size: 14px;
            margin-bottom: 12px;
        }

        .step2 {
            display: none;
        }

        .step2.show {
            display: block;
        }

        .sub-text {
            color: rgba(255, 255, 255, 0.8);
            font-size: 14px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="login-card">
        <h2>FORGOT PASSWORD</h2>

        <div id="step1">
            <p class="sub-text">Enter your email and we'll send you an OTP to reset your password.</p>
            <p id="msg1" class="error-msg" style="display: none;"></p>
            <div class="input-group">
                <div class="icon-circle">
                    <span>‚úâÔ∏è</span>
                </div>
                <input type="email" id="email" placeholder="Your email" required>
            </div>
            <button type="button" class="submit-btn" id="sendOtpBtn">SEND OTP</button>
        </div>

        <div id="step2" class="step2">
            <p class="sub-text">Enter the OTP sent to <strong id="sentEmail" style="color: #fff;"></strong></p>
            <p id="msg2" class="error-msg" style="display: none;"></p>
            <div class="input-group">
                <div class="icon-circle">
                    <span>#</span>
                </div>
                <input type="text" id="otp" placeholder="6-digit OTP" maxlength="6" inputmode="numeric"
                    pattern="[0-9]*">
            </div>
            <div class="input-group">
                <input type="password" id="newPassword" placeholder="New password" required>
                <div class="icon-circle">
                    <span>üîí</span>
                </div>
            </div>
            <div class="input-group">
                <input type="password" id="confirmPassword" placeholder="Confirm password" required>
                <div class="icon-circle">
                    <span>üîí</span>
                </div>
            </div>
            <button type="button" class="submit-btn" id="resetBtn">RESET PASSWORD</button>
            <button type="button" id="backBtn"
                style="background:none; border:none; color:rgba(255,255,255,0.6); margin-top:15px; cursor:pointer;">Wrong
                email?</button>
        </div>

        <a href="/login" class="signup-link">Back to Login</a>
    </div>

    <script>
        (function () {
            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const emailInput = document.getElementById('email');
            const msg1 = document.getElementById('msg1');
            const msg2 = document.getElementById('msg2');
            const sendOtpBtn = document.getElementById('sendOtpBtn');
            const resetBtn = document.getElementById('resetBtn');

            function showMsg(el, text, isError) {
                el.textContent = text;
                el.className = isError ? 'error-msg' : 'success-msg';
                el.style.display = 'block';
            }

            sendOtpBtn.addEventListener('click', async function () {
                const email = emailInput.value.trim().toLowerCase();
                if (!email) {
                    showMsg(msg1, 'Please enter your email.', true);
                    return;
                }
                sendOtpBtn.disabled = true;
                sendOtpBtn.textContent = 'Sending...';
                msg1.style.display = 'none';
                try {
                    const res = await fetch('/api/auth/forgot-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: email })
                    });
                    const data = await res.json();
                    if (data.success) {
                        showMsg(msg1, data.message, false);
                        document.getElementById('sentEmail').textContent = email;
                        step1.style.display = 'none';
                        step2.classList.add('show');
                        document.getElementById('otp').focus();
                    } else {
                        showMsg(msg1, data.message || 'Failed to send OTP.', true);
                    }
                } catch (e) {
                    showMsg(msg1, 'Network error. Try again.', true);
                }
                sendOtpBtn.disabled = false;
                sendOtpBtn.textContent = 'SEND OTP';
            });

            document.getElementById('backBtn').addEventListener('click', function () {
                step2.classList.remove('show');
                step1.style.display = 'block';
                msg1.style.display = 'none';
                msg2.style.display = 'none';
            });

            resetBtn.addEventListener('click', async function () {
                const email = emailInput.value.trim().toLowerCase();
                const otp = document.getElementById('otp').value.trim();
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                msg2.style.display = 'none';
                if (!email || !otp || !newPassword) {
                    showMsg(msg2, 'Please fill email, OTP and new password.', true);
                    return;
                }
                if (newPassword !== confirmPassword) {
                    showMsg(msg2, 'Passwords do not match.', true);
                    return;
                }
                if (newPassword.length < 6) {
                    showMsg(msg2, 'Password must be at least 6 characters.', true);
                    return;
                }
                resetBtn.disabled = true;
                resetBtn.textContent = 'Updating...';
                try {
                    const res = await fetch('/api/auth/reset-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: email, otp: otp, newPassword: newPassword })
                    });
                    const data = await res.json();
                    if (data.success) {
                        showMsg(msg2, data.message, false);

                        // Auto-login logic
                        if (data.token && data.user) {
                            sessionStorage.setItem('token', data.token);
                            sessionStorage.setItem('user', JSON.stringify(data.user));
                            setTimeout(function () { window.location.href = '/home'; }, 1500);
                        } else {
                            setTimeout(function () { window.location.href = '/login'; }, 2000);
                        }
                    } else {
                        showMsg(msg2, data.message || 'Failed to reset password.', true);
                        resetBtn.disabled = false;
                        resetBtn.textContent = 'RESET PASSWORD';
                    }
                } catch (e) {
                    showMsg(msg2, 'Network error. Try again.', true);
                    resetBtn.disabled = false;
                    resetBtn.textContent = 'RESET PASSWORD';
                }
            });
        })();
    </script>

</body>

</html>